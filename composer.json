{
    "name": "hgv/mss-php",
    "type": "library",
    "description": "MSS API Client for PHP projects",
    "homepage" : "https://github.com/HGV/mss-php",
    "keywords": ["mss","api","client"],
    "license": "MIT",
    "authors": [
        {
            "name": "David Mair Spiess",
            "email": "david.spiess@hgv.it"
        },
        {
            "name": "Thomas Walter",
            "email": "thomas.walter@hgv.it"
        }
    ],
    "require": {
        "php": ">=8.1",
        "jms/serializer": "^3.12",
        "psr/http-client": "^1.0",
        "php-http/client-common": "^2.1",
        "php-http/discovery": "^1.7"
    },
    "scripts": {
        "test": "phpunit"
    },
    "autoload": {
        "psr-4": {
            "MssPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MssPhp\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "glynnforrest/crutches": "^0.4",
        "vlucas/phpdotenv": "^5.1",
        "nyholm/psr7": "^1.0",
        "kriswallsmith/buzz": "^1.1",
        "phpunit/phpunit": "^10.5.5"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
